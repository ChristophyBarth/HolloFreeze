<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpFragment">

    <TextView
        android:id="@+id/subTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginBottom="90dp"
        android:text="@string/let_s_get_you_started_asap"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/name"
        app:layout_constraintEnd_toEndOf="@id/get_started"
        app:layout_constraintStart_toStartOf="@id/get_started" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/welcome_onboard"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/subTitle"
        app:layout_constraintEnd_toEndOf="@id/get_started"
        app:layout_constraintStart_toStartOf="@id/get_started" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/get_started"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginBottom="35dp"
        android:text="@string/register"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@id/sign_up_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/sign_in"
        android:textColor="@color/ourPrimaryColor"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/sign_up_tv" />

    <TextView
        android:id="@+id/sign_up_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:padding="5dp"
        android:text="@string/already_have_an_account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sign_in_button"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/edit_text_bg"
        android:hint="@string/confirm_password"
        android:inputType="textPassword"
        android:paddingHorizontal="25dp"
        android:paddingVertical="15dp"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/get_started" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edit_text_bg"
        android:hint="@string/enter_password"
        android:inputType="textPassword"
        android:paddingHorizontal="25dp"
        android:paddingVertical="15dp"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/confirm_password" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edit_text_bg"
        android:hint="@string/enter_your_email"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="25dp"
        android:paddingVertical="15dp"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/password" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        android:maxLength="50"
        android:background="@drawable/edit_text_bg"
        android:hint="@string/enter_your_full_name"
        android:inputType="textPersonName"
        android:paddingHorizontal="25dp"
        android:paddingVertical="15dp"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/email" />


</androidx.constraintlayout.widget.ConstraintLayout>